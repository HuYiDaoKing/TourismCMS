        loadData();

    })

    function loadData() {

        $.ajax({
            url: '/RouteOrder/GetById',
            type: 'GET',
            data: { id: id },
            async: false,
            timeout: 1000,
            beforeSend: function () {

            },
            success: function (data) {
                $('#route_order_detail').html('');
                $('#route-order-detail-tpl').tmpl(data).appendTo('#route_order_detail');
            },
            complete: function (XMLHttpRequest, textStatus) {

            },
            error: function (xhr) {
            }
        });

    }

</script>

