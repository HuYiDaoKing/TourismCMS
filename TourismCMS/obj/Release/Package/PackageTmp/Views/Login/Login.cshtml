@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>INSPINIA | Login</title>
    <link href="~/Assert/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assert/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assert/css/animate.css" rel="stylesheet" />
    <link href="~/Assert/css/style.css" rel="stylesheet" />
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">DL+</h1>
            </div>
            <h3>后台登录</h3>
            <p>
                Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.
                <!--Continually expanded and constantly improved Inspinia Admin Them (IN+)-->
            </p>
            <p>Login in. To see it in action.</p>
            <form class="m-t" role="form" action="index.html">
                <div class="form-group">
                    @{
#if DEBUG
                        string uname = "admin";
                        string upwd = "1111";
#else
                        string uname = "";
                        string upwd = "";
#endif
                    }
                    <input type="text" class="form-control" placeholder="用户名" id="uname" value="@uname" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="密码" id="pwd" value="@upwd" required="">
                </div>
                <button type="button" id="btnLogin" class="btn btn-primary block full-width m-b">登录</button>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Assert/js/jquery-2.1.1.js"></script>
    <script src="~/Assert/js/bootstrap.min.js"></script>
    <script src="~/Scripts/Login/Login.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#btnLogin').click(function () {
                Login();
            });
        })
    </script>

</body>
</html>
