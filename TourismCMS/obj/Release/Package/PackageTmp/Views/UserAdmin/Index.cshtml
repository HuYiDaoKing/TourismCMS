<script type="text/javascript">

    $(function () {

        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
        });

        $("#check_all").click(function () {
            //alert("111");
            $(".checkbox_btn").click();
        });

        createUserCombo();
        createRoleCombo();
        getPageUsers(0);

        //批量评审
        $("#review_btn").click(function () {
            var obj = document.getElementsByName('test');
            var s = '';
            for (var i = 0; i < obj.length; i++) {
                if (obj[i].checked) s += obj[i].value + ',';
            }
            alert("你选中的复选框的value值是" + s);
        });

        //批量删除
        $("#delete_btn").click(function () {
            var obj = document.getElementsByName('test');
            var s = '';
            for (var i = 0; i < obj.length; i++) {
                if (obj[i].checked) s += obj[i].value + ',';
            }
            //alert("你选中的复选框的value值是" + s);
            delete_click(s);
        });
    })

    function update_click() {

        var id = $('#Id').val();
        var strName = $('#Name').val();
        var strIDCard = $('#IDCard').val();
        var strEmail = $('#Email').val();
        var strAccountId = $('#AccountId').val();
        //var strPassword = $('#Password').val();
        var strPhone = $('#Phone').val();
        var strPosition = $('#Position').val();
        var strDescription = $('#Description').val();

        $.ajax({
            url: '/UserAdmin/Update',
            type: 'POST',
            data: {
                id: id,
                strName: strName,
                strIDCard: strIDCard,
                strEmail: strEmail,
                strAccountId: strAccountId,
                //strPassword: strPassword,
                strPhone: strPhone,
                strPosition: strPosition,
                strDescription: strDescription
            },
            async: false,
            timeout: 1000,
            beforeSend: function () {
            },
            success: function (data) {

                if (data.Bresult) {
                    $('#editModal').modal('hide');
                }
            },
            complete: function (XMLHttpRequest, textStatus) {

            },
            error: function (xhr) {
                alert('加载数据失败!');
            }
        });

    }


</script>
